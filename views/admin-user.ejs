<!DOCTYPE html>
<html ng-app="admin">
  <head>
    <meta charset="utf-8">
    <title>NTUAF Chat Room </title>

  </head>

  <body>

    <%- include layout/navbar %>

    <div ng-controller="adminUsersCtrl">
      <script type="text/ng-template" id="edit-user-modal.html">
        <div class="modal-header">
          <h3 class="modal-title">Edit user</h3>
        </div>
        <div class="modal-body">

          <div class="row">
            <div class="col-xs-6 col-md-4">
              <h4>name</h4>
            </div>
            <div class="col-xs-12 col-sm-6 col-md-8">
              <h4>{{ editUser.fb.displayName }}</h4>
            </div>
          </div>
          </div class="row">
          <div class="col-xs-6 col-md-4">
            <h4>facebook ID</h4>
          </div>
          <div class="col-xs-12 col-sm-6 col-md-8">
            <h4>{{ editUser.fb.id }}</h4>
          </div>
        </div>

        <div class="row">
          <div class="col-xs-6 col-md-4">
            <h4>facebook ID</h4>
          </div>
          <div class="col-xs-12 col-sm-6 col-md-8">
            <h4>{{ editUser.fb.id }}</h4>
          </div>
        </div>

        <div class="row">
          <div class="col-xs-6 col-md-4">
            <img ng-src="http://graph.facebook.com/{{ editUser.fb.id }}/picture?type=normal" width="120px" height="120px"></img>
          </div>
          <div class="col-xs-12 col-sm-6 col-md-8">
            <div style="align: center;">
              <form>
                <select name="ActivitySelect" ng-model="ctrl.act" ng-options="act._id as act.name for act in activitylist">
                  <option value="" selected>-- Please select activity to add --</option>
                </select>
                <button class="btn btn-primary" ng-click="addActivity()">Add Activity</button>
              </form>
            </div>
            <table>
              <thead>
                <tr>
                  <th>no.</th>
                  <th>Activity</th>
                  <th>playerID</th>
                  <th>attend?</th>
                  <th>&nbsp;</th>
                </tr>
              </thead>
              <tbody>
                <tr ng-repeat="useract in editUser.activities">
                  <td>{{ useract.id }}</td>
                  <td>{{ useract.gameName }}</td>
                  <td>{{ useract.player_id }}</td>
                  <td>{{ useract.isAttend }}</td>
                  <td><button class="btn btn-danger" ng-click="removeActivitiy( useract.id )">Remove</button></td>
                </tr>
              </tbody>
            </table>
          </div>
        </div>


        <div class="modal-footer">
          <button class="btn btn-primary" type="button" ng-click="ok()">OK</button>
          <button class="btn btn-warning" type="button" ng-click="cancel()">Cancel</button>
        </div>
      </script>
      <table >
        <thead>
          <tr>
            <th>Name</th>         
            <th>email</th>
            <th>Date</th>
            <th>Attender no.</th>
            <th>&nbsp;</th>
          </tr>
        </thead>
        <tbody>
          <tr ng-repeat="user in userlist">
            <td>{{user.fb.displayName}}</td>
            <td>{{ user.fb.email }}</td>
            <td>{{user.time}}</td>
            <td ng-repeat="act in user.activities">{{ act.player_id }} # {{ act.gameName }}</td>
            <td><button class="btn btn-danger" ng-click="remove(user._id)">Remove</button></td>
            <td><button class="btn btn-warning" ng-click="edit(user._id) && selected.user = user" >Edit</button></td>
          </tr>



        </table>


      </div>

      <%- include layout/fb-like %>


      <script src="//ajax.googleapis.com/ajax/libs/angularjs/1.5.0/angular.js"></script>
      <script src="//ajax.googleapis.com/ajax/libs/angularjs/1.5.0/angular-animate.js"></script>
      <script src="//angular-ui.github.io/bootstrap/ui-bootstrap-tpls-1.2.2.js"></script>
      <script src="example.js"></script>
      <link href="//netdna.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css" rel="stylesheet">
      <script src="/javascripts/ng-admin.js"></script>
    </body>
  </html>

