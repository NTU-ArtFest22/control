<div class="modal-header">
  <h3 class="modal-title">Edit activity</h3>
</div>
<div class="modal-body" >

  <form name="demo"> 
    <div class="row">
      <div class="col-xs-6 col-md-4"><h4 class="data-title">Mission name</h4></div>
      <div class="col-xs-12 col-sm-6 col-md-8">
        <input class="form-control" ng-model="mission.name" required />
      </div>
    </div>
    <div class="row">
      <div class="col-xs-6 col-md-4"><h4 class="data-title">content</h4></div>
      <div class="col-xs-12 col-sm-6 col-md-8">
        <input class="form-control" ng-model="mission.content" required />
      </div>
    </div>
  
</div>
<div class="modal-footer">
  <button class="btn btn-primary pull-right" style="align: left;" type="submit" ng-click="sendMission()">Send</button> 
  <button class="btn btn-warning" type="button" ng-click="cancel()">Cancel</button>
  </form>
</div>

