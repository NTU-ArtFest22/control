        <th>Name</th>
        <th>Character</th>
        <th>Class</th>
        <th>Acc</th>
        <th>Bat(work)</th>
        <th>Bat(stream)</th>
        <th>LTEsignal</th>
        <!-- <th>update time</th> -->
        <th>Stream</th>
        <th>View</th>
        <th>Call</th>
      </thead>
      <tbody>
        <tr ng-repeat="group in act.group">
          <td style="text-align: left;">{{group.artist.name}}</td>
          <td>{{group.artist.gps.character}}</td>
          <td>{{group.artist.gps.sclass}}</td>
          <td>{{group.artist.gps.acc}}m</td>
          <td>{{group.artist.gps.battery.work}}%</td>
          <td>{{group.artist.gps.battery.stream}}%</td>
          <td>0</td>
